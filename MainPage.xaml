<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningManagment.MainPage"
             Title="Электронный журнал"
             BackgroundColor="#F8FAFC">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Стиль для Label -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#1E293B" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <!-- Стиль для Button -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3B82F6" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0,12,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="20,10">

            <!-- Главный заголовок -->
            <Label Text="Электронный журнал"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1E293B"
                   HorizontalOptions="Center"
                   Margin="0,10,0,30" />

            <!-- Добавить студента -->
            <Border Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Padding="20"
                    Margin="0,0,0,20">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="10" Opacity="0.1" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="12">
                    <Label Text="Добавить студента" FontSize="18" FontAttributes="Bold" />
                    <Border Stroke="#E2E8F0"
                            StrokeThickness="1"
                            BackgroundColor="#F1F5F9"
                            StrokeShape="RoundRectangle 12"
                            Margin="0,8">
                        <Entry x:Name="StudentNameEntry"
                               Placeholder="Имя и фамилия студента"
                               TextColor="#1E293B"
                               PlaceholderColor="#94A3B8"
                               BackgroundColor="Transparent"
                               Margin="12,0" />
                    </Border>
                    <Button Text="Добавить" Clicked="AddStudent_Clicked" />
                </VerticalStackLayout>
            </Border>

            <!-- Добавить предмет -->
            <Border Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Padding="20"
                    Margin="0,0,0,20">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="10" Opacity="0.1" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="12">
                    <Label Text="Добавить предмет" FontSize="18" FontAttributes="Bold" />
                    <Border Stroke="#E2E8F0"
                            StrokeThickness="1"
                            BackgroundColor="#F1F5F9"
                            StrokeShape="RoundRectangle 12"
                            Margin="0,8">
                        <Entry x:Name="SubjectNameEntry"
                               Placeholder="Название предмета"
                               TextColor="#1E293B"
                               PlaceholderColor="#94A3B8"
                               BackgroundColor="Transparent"
                               Margin="12,0" />
                    </Border>
                    <Button Text="Добавить" Clicked="AddSubject_Clicked" />
                </VerticalStackLayout>
            </Border>

            <!-- Выставить оценку -->
            <Border Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Padding="20"
                    Margin="0,0,0,20">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,4" Radius="10" Opacity="0.1" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="12">
                    <Label Text="Выставить оценку" FontSize="18" FontAttributes="Bold" />
                    <Border Stroke="#E2E8F0"
                            StrokeThickness="1"
                            BackgroundColor="#F1F5F9"
                            StrokeShape="RoundRectangle 12"
                            Margin="0,8">
                        <Picker x:Name="StudentPicker"
                                Title="Выберите студента"
                                TextColor="#1E293B"
                                TitleColor="#94A3B8"
                                BackgroundColor="Transparent"
                                Margin="12,0" />
                    </Border>
                    <Border Stroke="#E2E8F0"
                            StrokeThickness="1"
                            BackgroundColor="#F1F5F9"
                            StrokeShape="RoundRectangle 12"
                            Margin="0,8">
                        <Picker x:Name="SubjectPicker"
                                Title="Выберите предмет"
                                TextColor="#1E293B"
                                TitleColor="#94A3B8"
                                BackgroundColor="Transparent"
                                Margin="12,0" />
                    </Border>
                    <Border Stroke="#E2E8F0"
                            StrokeThickness="1"
                            BackgroundColor="#F1F5F9"
                            StrokeShape="RoundRectangle 12"
                            Margin="0,8">
                        <Entry x:Name="GradeValueEntry"
                               Placeholder="Оценка (1–5)"
                               Keyboard="Numeric"
                               TextColor="#1E293B"
                               PlaceholderColor="#94A3B8"
                               BackgroundColor="Transparent"
                               Margin="12,0" />
                    </Border>
                    <Button Text="Выставить"
                            Clicked="AddGrade_Clicked"
                            BackgroundColor="#10B981" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>