<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningManagment.MainPage"
             Title="Электронный журнал">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Start">

            <!-- Добавление студента -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Добавить студента" FontSize="18" FontAttributes="Bold" />
                    <Entry x:Name="StudentNameEntry" Placeholder="Имя студента" TextColor="Black" />
                    <Button Text="Добавить студента" Clicked="AddStudent_Clicked" BackgroundColor="#007ACC" TextColor="Black" CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

            <!-- Добавление предмета -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Добавить предмет" FontSize="18" FontAttributes="Bold" />
                    <Entry x:Name="SubjectNameEntry" Placeholder="Название предмета" TextColor="Black" />
                    <Button Text="Добавить предмет" Clicked="AddSubject_Clicked" BackgroundColor="#007ACC" TextColor="Black" CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

            <!-- Добавление оценки -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Добавить оценку" FontSize="18" FontAttributes="Bold" />
                    <Picker x:Name="StudentPicker" Title="Выберите студента" />
                    <Picker x:Name="SubjectPicker" Title="Выберите предмет" />
                    <Entry x:Name="GradeValueEntry" Placeholder="Оценка (например: 4.5)" Keyboard="Numeric" TextColor="Black" />
                    <Button Text="Добавить оценку" Clicked="AddGrade_Clicked" BackgroundColor="#28A745" TextColor="Black" CornerRadius="8" />
                </VerticalStackLayout>
            </Frame>

            <!-- Список студентов со средним баллом -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout>
                        <Label Text="Студенты и средние баллы" FontSize="18" FontAttributes="Bold" TextColor="Black" VerticalOptions="Center" />
                        <Button Text="Обновить" Clicked="RefreshList_Clicked" BackgroundColor="#6C757D" TextColor="Black" CornerRadius="8" HorizontalOptions="End" Margin="20"/>
                    </HorizontalStackLayout>

                    <CollectionView x:Name="StudentsList" HeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" ColumnDefinitions="*, Auto">
                                    <Label Text="{Binding Name}" 
                                           FontSize="18" 
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding AverageGrade, StringFormat='Средний балл: {0:F2}'}"
                                           FontSize="16"
                                           TextColor="Gray"
                                           VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>